{% extends "front_layout.html.twig" %}

{% block title %}
	{{ ('front.' ~ page.tab)|trans({}, 'menu')}}/{{('front.' ~ page.name)|trans({}, 'menu')}}
{% endblock %}

{% block header %}
	{% include( "front_templates/_front_menu.html.twig") %}
{% endblock %}

{% block pageTitle %}
	<div id="pageTitleBar">
		<img class=" d-md-block d-none redCircle" src="{{asset('images/redCircle.jpg')}}" alt="cercle pointillé rouge" aria-hidden="true">
		<img class=" d-md-block d-none biColorCircle" src="{{asset('images/bicolorCircle.jpg')}}" alt="cercle pointillé rouge et noir" aria-hidden="true">
		<div class="d-flex justify-content-center">
			<h1 class="mt-3 pageTitle px-4 text-center">
				{{company.name|raw}}
			</h1>
		</div>
		<div class="titleLines">
			<img class="titleBar" src="{{asset('images/title-bar.jpg')}}" alt="barre grise" aria-hidden="true">
		</div>
	</div>
{% endblock %}
