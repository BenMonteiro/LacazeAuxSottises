{% extends 'base.html.twig' %}

{% block title %}{{ performance.name }}{% endblock %}

{% block body %}
<h1>{{ performance.name }}</h1>

<table class="table">
    <tbody>
        <tr>
            <th>{{'perf.label'|trans({}, 'perf')|capitalize}}</th>
            <td>{{ performance.name }}</td>
        </tr>
        <tr>
            <th>{{'perf.show.city'|trans({}, 'perf')|capitalize}}</th>
            <td>{{ performance.cityShow }}</td>
        </tr>
        <tr>
            <th>{{'perf.show.place'|trans({}, 'perf')|capitalize}}</th>
            <td>{{ performance.placeShow }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ performance.date ? performance.date|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>{{'perf.show.event'|trans({}, 'perf')|capitalize}}</th>
            <td>{{ performance.event}}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('performance_index') }}">{{'general.back'|trans({}, 'general')|capitalize}}</a>

<a href="{{ path('performance_edit', {'id': performance.id}) }}">{{'general.edit'|trans({}, 'general')|capitalize}}</a>

{{ include('performance/_delete_form.html.twig') }}
{% endblock %}