{% extends 'base.html.twig' %}

{% block title %}{{'user.index'|trans({}, 'user')|title}}{% endblock %}

{% block body %}
{% include('_back_menu.html.twig') %}

<h1>{{'user.index'|trans({}, 'user')|title}}</h1>

<table class="table table-sm text-align-center table-striped index text-center mb-5 pb-5">
    <thead>
        <tr>
            <th>{{'Username'|trans({}, 'user')|capitalize}}</th>
            <th>{{'Role'|trans({}, 'user')|capitalize}}</th>
            <th><a href="{{ path('user_register') }}">{{'general.create'|trans({}, 'general')|capitalize}}</a></th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.username }}</td>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            <td>
                {{ include('user/_delete_form.html.twig') }}
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="9">{{'general.noRecords'|trans({}, 'general')|capitalize}}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}