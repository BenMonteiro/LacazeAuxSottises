{% extends 'base.html.twig' %}

{% block title %}{{partner.name}}{% endblock %}

{% block body %}
<h1>{{partner.name}}</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Type</th>
            <td>{{ ('partner.' ~ partner.type)|trans({}, 'partners')|capitalize }}</td>
        </tr>
        <tr>
            <th>Logo</th>
            <td><img class="partnerLogo" src="{{ asset('images/uploads/partnerLogo/' ~ partner.logo.name) }}"></td>
        </tr>
    </tbody>
</table>

<a href="{{ path('partners_index') }}">{{'general.back'|trans({}, 'general')|capitalize}}</a>

<a href="{{ path('partners_edit', {'id': partner.id}) }}">{{'general.edit'|trans({}, 'general')|capitalize}}</a>

{{ include('partners/_delete_form.html.twig') }}
{% endblock %}