{% extends 'base.html.twig' %}

{% block title %}{{'partner.index'|trans({},'partners')|title}}{% endblock %}

{% block body %}
    <h1>{{'partner.index'|trans({},'partners')|title}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{'general.name'|trans({}, 'general')|capitalize}}</th>
                <th>Type</th>
                <th>Logo</th>
                <th> <a href="{{ path('partners_new') }}">{{'general.create'|trans({}, 'general')|capitalize}}</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td>{{ partner.name }}</td>
                <td>{{ ('partner.label.' ~ partner.type)|trans({},'partners') }}</td>
                <td><img class="partnerLogo" src="{{ asset('images/uploads/partnerLogo/' ~ partner.logo.name) }}"></td>
                <td>
                    <a href="{{ path('partners_show', {'id': partner.id}) }}">{{'general.show'|trans({}, 'general')|capitalize}}</a>
                    <a href="{{ path('partners_edit', {'id': partner.id}) }}">{{'general.edit'|trans({}, 'general')|capitalize}}</a>
                    {{ include('partners/_delete_form.html.twig') }}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">{{'general.noRecords'|trans({}, 'general')}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('partners_new') }}">{{'general.create'|trans({}, 'general')|capitalize}}</a>
{% endblock %}
