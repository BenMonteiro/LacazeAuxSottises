{% extends 'base.html.twig' %}
{% trans_default_domain 'partners' %}

{% block title %}Partners index{% endblock %}

{% block body %}
    <h1>Partners index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Logo</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td>{{ partner.id }}</td>
                <td>{{ partner.name }}</td>
                <td>{{ ('partner.label.' ~ partner.type)|trans }}</td>
                <td><img class="partnerLogo" src="{{ asset('images/uploads/partnerLogo/' ~ partner.logo.name) }}"></td>

                <td>
                    <a href="{{ path('partners_show', {'id': partner.id}) }}">show</a>
                    <a href="{{ path('partners_edit', {'id': partner.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('partners_new') }}">Create new</a>
{% endblock %}
