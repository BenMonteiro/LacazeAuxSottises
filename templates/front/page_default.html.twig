{% extends "front_templates/page_template.html.twig" %}

{% block body %}
	<img class="redCircle" src="{{asset('images/TRAIT.rouge.jpg')}}">
	<div class="offset-2 col-8 d-flex flex-wrap justify-content-between mb-5">
		{% for section in sections %}
			{% if section.image.name %}
				<div class="col-4">
					<div class="image-top">
						<img class="image-frame" src="{{ asset('images/cadre.png') }}">
						<img class="image-top-page" src="{{ asset('images/uploads/paragraphImage/' ~ section.image.name) }}" alt="{{section.imageDescription}}">
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div>
	<div class="offset-2 col-8">
		{% for section in sections %}
			<article class="mb-5 mx-5">
				{% if section.title %}
					<h3 class="font-weight-bold colored mb-0">{{ section.title }}</h3>
				{% endif %}
				{% if section.subTitle %}
					<h4 class="font-weight-bold colored">{{ section.subTitle }}</h4>
				{% endif %}
				<p class="text-justify">{{ section.content|raw}}</p>
			</article>
		{% endfor %}
	</div>
{% endblock %}
