{% extends "front_templates/page_template.html.twig" %}

{% block body %}
	<div class="d-flex flex-wrap justify-content-around mb-5">
		{% for section in sections %}
			{% if section.image.name %}
				<div class="col-3 mb-2">
					<img class="img-thumbnail" src="{{ asset('images/uploads/paragraphImage/' ~ section.image.name) }}" alt="{{section.imageDescription}}">
				</div>
			{% endif %}
		{% endfor %}
	</div>
	<div class="offset-1 col-10">
		{% for section in sections %}
			<article class="mb-5">
				{% if section.title %}
					<h3 class="colored">{{ section.title }}</h3>
				{% endif %}
				{% if section.subTitle %}
					<h4>{{ section.subTitle }}</h4>
				{% endif %}
				<p class="text-justify">{{ section.content|raw}}</p>
			</article>
		{% endfor %}
	</div>
{% endblock %}
