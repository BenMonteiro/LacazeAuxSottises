{% extends "front_templates/page_template.html.twig" %}

{% block body %}

	<div class="d-flex justify-content-around col-12 flex-wrap">
		{% for company in companies %}
			<div class="d-flex align-content-between col-3 text-center my-3">
				<a class="element-link d-flex flex-column justify-content-between" href="{{path('display_company',{'id':company.id})}}">
					<h3>{{company.name}}</h3>
					<div class="company-image-div">
						<img class="company-frame" src="{{ asset('images/bulle.png') }}">
						<img class="company-image" src="{{ asset('images/uploads/company/' ~ company.image.name) }}">
					</div>
				</a>
			</div>
		{% endfor %}
	</div>
{% endblock %}
