{% extends "front_templates/page_template.html.twig" %}

{% block body %}
	<div class="container-fluid">
		<div>
			<h2 class="colored">Le Rendez-vous des Producteurs</h2>
			{% for section in sections %}
				{% if section.name == 'prod meeting' %}
					<div class="d-flex align-items-center col-12 mb-3">
						<img class="col-lg-2 col-md-3 d-sm-block d-none img-thumbnail rounded" src="{{ asset('images/uploads/paragraphImage/' ~ section.image.name) }}">
						<article class="my-5 col-sm-8">
							{% if section.title %}
								<h3 class="colored">{{ section.title }}</h3>
							{% endif %}
							{% if section.subTitle %}
								<h4>{{ section.subTitle }}</h4>
							{% endif %}
							<p>{{ section.content|raw}}</p>
						</article>
					</div>
				{% endif %}
			{% endfor %}
		</div>
		<div>
			<h2 class="colored">Les Soir√©es du Tiers-Lieu</h2>
			{% for section in sections %}
				{% if section.name == 'nights' %}
					<section class=" d-flex align-items-center col-12 mb-3">
						{% if section.image.name %}
							<img class="col-lg-2 col-md-3 d-sm-block d-none img-thumbnail" src="{{ asset('images/uploads/paragraphImage/' ~ section.image.name) }}">
						{% endif %}
						<article class="h-100 col-sm-8">
							{% if section.title %}
								<h3 class="colored">{{ section.title }}</h3>
							{% endif %}
							{% if section.subTitle %}
								<h4>{{ section.subTitle }}</h4>
							{% endif %}
							<p class="text-justify">{{ section.content|raw}}</p>
						</article>
					</section>
				{% endif %}
			{% endfor %}
		</div>

		<div id="calendar" class="my-5">
			<ul class="list-unstyled">
				{% for placeEventPerf in placeEventPerfs %}
					<div class="col-md-8 col-sm-10 col-8">
						<li class="d-sm-flex">
							<img class="miniImage img-thumbnail rounded" src="{{ asset('images/uploads/company/' ~ placeEventPerf.companyName.image.name) }}">

							<div class="flex-column col-sm-2 mt-2">
								<p>{{ placeEventPerf.date|format_date(pattern='EEEE dd MMMM')|capitalize }}</p>
								<p>
									Prix libre
								</p>
							</div>
							<div class="offset-sm-1">
								<p>{{ placeEventPerf.date|date('H') }}h{{ placeEventPerf.date|date('i') }}
									-
									{{ placeEventPerf.companyName.description|raw }}</p>
							</div>
						</li>
						<hr class="my-2 redline">
					</div>
				{% endfor %}
			</ul>
		</div>
		<div>
			<h2 class="colored">Les Visites du Tiers-Lieu</h2>
			{% for section in sections %}
				{% if section.name == 'visit' %}
					<div class="d-flex align-items-center col-12 mb-3">
						<article class="my-5 col-sm-8">
							{% if section.title %}
								<h3 class="colored">{{ section.title }}</h3>
							{% endif %}
							{% if section.subTitle %}
								<h4>{{ section.subTitle }}</h4>
							{% endif %}
							<p>{{ section.content|raw}}</p>
						</article>
						<img class="col-lg-2 col-md-3 d-sm-block d-none img-thumbnail rounded " src="{{ asset('images/uploads/paragraphImage/' ~ section.image.name) }}">
					</div>
				{% endif %}
			{% endfor %}
		</div>
	{% endblock %}
