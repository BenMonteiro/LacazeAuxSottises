{% extends 'front_base.html.twig' %}

{% block title %}
	{{ page.pageSlug }}
{% endblock %}

{% block body %}

	<div class="d-flex justify-content-around flex-wrap">
		{% for company in companies %}
			<div class="col-3 text-center my-3">
				<a href="{{ path('display_company', {'id': company.id}) }}">
					<h3>{{company.name}}</h3>
					<img class="miniImage" src="{{ asset('images/uploads/company/' ~ company.image.name) }}">
				</a>
			</div>
		{% endfor %}
	</div>

{% endblock %}
