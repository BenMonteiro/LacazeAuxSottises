{% extends "front_templates/page_template.html.twig" %}

{% block body %}
	<img class="redCircle" src="{{asset('images/TRAIT.rouge.jpg')}}">
	<div class=" d-none offset-xl-2 col-xl-8 d-md-flex flex-wrap justify-content-around mb-5">
		{% for section in sections %}
			{% if section.image %}
				<div class="d-flex flex-column align-items-center col-lg-3 col-md-4 col-sm-6 col-12 my-3">
					<div class="company-image-div">
						<img class="company-frame" src="{{ asset('images/cadre.png') }}">
						<img class="company-image" src="{{ asset('images/uploads/paragraphImage/' ~ section.image.name) }}" alt="{{section.imageDescription}}">
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div>
	<div class="offset-md-2 col-md-8">
		{% for section in sections %}
			<article class="mb-5 mx-5">
				{% if section.title %}
					<h3 class="font-weight-bold colored mb-0">{{ section.title|lower|capitalize }}</h3>
				{% endif %}
				{% if section.subTitle %}
					<h4 class="font-weight-bold colored">{{ section.subTitle }}</h4>
				{% endif %}
				<p class="text-justify">{{ section.content|raw}}</p>
			</article>
		{% endfor %}
	</div>
{% endblock %}
