{% extends "front_templates/page_template.html.twig" %}

{% block body %}
	<div class="container-fluid">

		{% include('/front_pages/_intro_section_template.html.twig') %}

		<div id="partnersLogos" class="d-flex flex-wrap justify-content-around offset-2 col-8 mb-4">
			{% for partner in partners %}
				{% if partner.type == "institution" %}
					{% if partner.logo.name %}
						<div class="mb-2 mr-2">
							<a href="{{partner.website}}" title={{partner.name}}>
								<img class="partnerLogo" src="{{ asset('images/uploads/partnerLogo/' ~ partner.logo.name) }}" alt="{{partner.name}}">
							</a>
						</div>
					{% endif %}
				{% endif %}
			{% endfor %}
		</div>

		<div class="d-flex text-center justify-content-center">
			<h2 class="mt-3 pageTitle px-4">
				{{'partner.productors'|trans({}, 'partners')|capitalize}}
			</h2>
		</div>
		<div class="text-center">
			<img class="miniTitleBar" src="{{asset('images/trait-rouge.png')}}" alt="barre rouge">
		</div>
		<p class="offset-md-1 col-md-10">
			{% for partner in partners %}
				{% if partner.type == "prod_dist" %}
					<a href="{{partner.website}}" title="{{partner.name}}">
						{% if loop.last %}
							{{ partner.name}}
						{% else %}
							{{ partner.name ~ ' /'}}
						{% endif %}
					</a>
				{% endif %}
			{% endfor %}
		</p>
		<div class="d-flex text-center justify-content-center">
			<h2 class="mt-3 pageTitle px-4">
				{{'partner.partner'|trans({}, 'partners')|capitalize}}
			</h2>
		</div>
		<div class="text-center">
			<img class="miniTitleBar" src="{{asset('images/trait-rouge.png')}}" alt="barre rouge">
		</div>
		<p class="offset-md-1 col-md-10">
			{% for partner in partners %}
				{% if partner.type == "partners" %}
					<a href="{{partner.website}}" title="{{partner.name}}">
						{% if loop.last %}
							{{ partner.name}}
						{% else %}
							{{ partner.name ~ ' /'}}
						{% endif %}
					</a>
				{% endif %}
			{% endfor %}
		</p>

		<div class="offset-md-2 col-md-8 mb-3">
			{% for section in sections %}
				{% if section.name != 'intro' %}
					<article class="my-5 text-sm-left text-center">
						{% if section.title %}
							<h2 class="font-weight-bold colored mb-0">{{ section.title|lower|capitalize }}</h2>
						{% endif %}
						{% if section.subTitle %}
							<h3 class="font-weight-bold colored">{{ section.subTitle }}</h3>
						{% endif %}
						<div class="mb-2 mt-3">{{ section.content|raw}}</div>
					</article>
				{% endif %}
			{% endfor %}
		</div>
	</div>
{% endblock %}
