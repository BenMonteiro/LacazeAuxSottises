{% for section in sections %}
	{% if section.name == 'intro' %}
		<div class="offset-md-2 col-md-8 mb-5 text-center">
			<article>
				{% if section.title %}
					<h2 class="mb-2">{{ section.title }}</h2>
				{% endif %}
				{% if section.subTitle %}
					<h3>{{ section.subTitle }}</h3>
				{% endif %}
				<p>{{ section.content|raw }}</p>
			</article>
		</div>
	{% endif %}
{% endfor %}
