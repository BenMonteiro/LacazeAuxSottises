{% extends "front_templates/page_template.html.twig" %}

{% block body %}

	<div class="d-flex justify-content-center offset-2 col-8 flex-wrap">
		{% for company in companies %}
			<div class=" d-flex flex-column align-items-center col-lg-6 col-12 my-3">
				<a class="element-link" href="{{path('display_company',{'id':company.id})}}" title="Voir le fiche de la compagnie">
					<div class="cubic-image-div mb-0">
						<img class="image-frame" src="{{ asset('images/cadre.png') }}" alt="cadre noir entourant l'image">
						<img class="cubic-image" src="{{ asset('images/uploads/company/' ~ company.image.name) }}" alt="{{company.imageDescription}}">
					</div>
				</a>
				<h2 class="mb-0 colored">{{company.name}}</h2>
				{% for perf in company.performances %}
					{% if perf.event != 'Festival Fête des sottises !' and perf.event != 'Préambules sur le territoire' %}

						<p class=" m-0">
							{{perf.date|format_date('full')|capitalize}}<br>
						</p>

						<p class="m-0">
							{{perf.placeShow}}
							-
							{{perf.cityShow}}
						</p>
					{% endif %}
				{% endfor %}
			</div>
		{% endfor %}
	</div>
{% endblock %}
