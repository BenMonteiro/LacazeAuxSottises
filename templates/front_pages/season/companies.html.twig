{% extends "front_templates/page_template.html.twig" %}

{% block body %}

	<div class="d-flex justify-content-center offset-2 col-8 flex-wrap">
		{% for perf in perfs %}
			{% if perf.event != 'Festival Fête des sottises !' and perf.event != 'Préambules sur le territoire' %}
				<div class=" d-flex justify-content-center col-lg-6 col-12 my-3">
					<a class="element-link" href="{{path('display_company',{'id':perf.company.id})}}" title="Voir la fiche de la compagnie">
						<figure class="d-flex flex-column align-items-center">
							<div class=" cubic-image-div mb-0">
								<img class="image-frame" src="{{ asset('images/cadre.png') }}" alt="cadre noir entourant l'image" aria-hidden="true">
								<img class="cubic-image" src="{{ asset('images/uploads/company/' ~ perf.company.image.name) }}" alt="{{perf.company.imageDescription}}">
							</div>
							<figcaption class="text-center">
								<h2 class="mb-0 colored">{{perf.company.name|raw}}</h2>
								{% if perf.event != 'saison' %}
									<p>{{perf.event}}</p>
								{% endif %}

								<p class=" m-0">
									{{perf.date|format_date('full')|capitalize}}<br>
								</p>
								<p class="m-0 text-grey">
									{{perf.placeShow|raw}}
									-
									{{perf.cityShow|raw}}
								</p>
							</figcaption>
						</figure>
					</a>

				</div>
			{% endif %}

		{% endfor %}

	</div>
{% endblock %}
