{% extends "front_templates/page_template.html.twig" %}

{% block body %}
	{% include('/front_pages/_intro_section_template.html.twig') %}

	{% set bg = '' %}
	{% if page.name == 'plural-projects' %}
		{% set bg = 'bg-light' %}
	{% endif %}
	<div class="{{ bg }} offset-lg-3 col-lg-6 py-3">
		{% for section in sections %}
			{% if section.name == 'top' %}
				<article class="text-center mb-5">
					{% if section.title %}
						<h2 class="colored mb-1">{{ section.title|raw }}</h2>
					{% endif %}
					{% if section.subTitle %}
						<h4 class="font-weight-bold">{{ section.subTitle|raw|capitalize }}</h4>
					{% endif %}
					<div>{{ section.content|raw }}</div>
				</article>
			{% endif %}
		{% endfor %}
		<div class="d-lg-flex mt-3 align-items-start justify-content-center">
			{% for section in sections %}
				{% if section.name == 'left' %}
					<article class="text-center framedArticle dot col-lg-6 mb-1 m-0 mx-1">
						{% if section.title %}
							<h2 class=" colored">{{ section.title|raw|capitalize }}</h2>
						{% endif %}
						{% if section.subTitle %}
							<p class="font-weight-bold mx-0 mb-2">{{ section.subTitle|raw|capitalize }}</p>
						{% endif %}
						<div class="text-left m-0">{{ section.content|raw }}</div>
					</article>
				{% endif %}

				{% if section.name == 'right' %}
					<article class="text-center framedArticle red-dot col-lg-6 mb-1 m-0 mx-1">
						{% if section.title %}
							<h2 class="colored">{{ section.title|raw|capitalize }}</h2>
						{% endif %}
						{% if section.subTitle %}
							<h3 class="font-weight-bold mx-0 mb-2">{{ section.subTitle|raw|capitalize }}</h3>
						{% endif %}
						<div class="text-left">{{ section.content|raw }}</div>
					</article>
				{% endif %}
			{% endfor %}
		</div>

		{% for section in sections %}
			{% if section.name == 'bottom' %}
				<article class="text-center framedArticle solid m-0 mt-1">
					{% if section.title %}
						<h2 class="colored">{{ section.title|raw|capitalize }}</h2>
					{% endif %}
					{% if section.subTitle %}
						<p class="font-weight-bold">{{ section.subTitle|raw|capitalize }}</p>
					{% endif %}
					<div class="mb-1">{{ section.content|raw }}</div>
				</article>
			{% endif %}
		{% endfor %}
		{% for section in sections %}
			{% if section.name == 'last' %}
				<article class="text-center framedArticle dash m-0 mt-1">
					{% if section.title %}
						<h2 class="colored">{{ section.title|raw|capitalize }}</h2>
					{% endif %}
					{% if section.subTitle %}
						<h3 class="font-weight-bold mx-0 mb-2">{{ section.subTitle|raw|capitalize }}</h3>
					{% endif %}
					<div class="my-1">{{ section.content|raw }}</div>
				</article>
			{% endif %}
		{% endfor %}
	</div>
{% endblock %}
