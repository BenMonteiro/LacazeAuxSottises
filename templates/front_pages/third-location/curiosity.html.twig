					<article class="h-100 col-md-7 text-sm-left text-center">
						{% if section.title %}
							<h2 class="colored">{{ section.title }}</h2>
						{% endif %}
						{% if section.subTitle %}
							<h3>{{ section.subTitle }}</h3>
						{% endif %}
						<p>{{ section.content|raw}}</p>
					</article>
				</section>
			{% endif %}
		{% endfor %}

		<h2 class="font-weight-bold colored offset-2 mb-3">{{ 'general.third_location.do_it_yourself'|trans({}, 'general')|title }}</h2>
		{% for section in sections %}
			{% if section.name == 'do it' %}
				<section class=" d-sm-flex align-items-center justify-content-between offset-lg-2 col-lg-8 mb-3">
