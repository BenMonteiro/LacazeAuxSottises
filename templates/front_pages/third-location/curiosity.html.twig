{% extends "front_templates/page_template.html.twig" %}

{% block body %}
	<div class="container-fluid">

		{% include('/front_pages/_intro_section_template.html.twig') %}

		<h2 class="font-weight-bold colored offset-2 mb-3">{{ 'general.third_location.all_year'|trans({}, 'general')|title }}</h2>
		{% for section in sections %}
			{% if section.name == "all year" %}
				<section class=" d-sm-flex align-items-center justify-content-between offset-lg-2 col-lg-8 mb-3">
					<div class="d-flex flex-column align-items-center my-3">
						<div class="company-image-div">
							<img class="company-frame" src="{{ asset('images/cadre.png') }}">
							<img class="company-image" src="{{ asset('images/uploads/paragraphImage/' ~ section.image.name) }}" alt="{{section.imageDescription}}">
						</div>
					</div>
					<article class="h-100 col-md-7 text-sm-left text-center">
						{% if section.title %}
							<h2 class="colored">{{ section.title }}</h2>
						{% endif %}
						{% if section.subTitle %}
							<h3>{{ section.subTitle }}</h3>
						{% endif %}
						<p>{{ section.content|raw}}</p>
					</article>
				</section>
			{% endif %}
		{% endfor %}

		<h2 class="font-weight-bold colored offset-2 mb-3">{{ 'general.third_location.punctual'|trans({}, 'general')|title }}</h2>
		{% for section in sections %}
			{% if section.name == 'punctual' %}
