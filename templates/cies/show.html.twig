{% extends 'base.html.twig' %}

{% block title %}Cies{% endblock %}

{% block body %}
    <h1>Cies</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cy.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cy.name }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ cy.theme }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td><img class="cieImage" src="{{ asset('images/uploads/' ~ cy.image.name) }}"></td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ cy.place }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ cy.duration }}</td>
            </tr>
            <tr>
                <th>Audience</th>
                <td>{{ cy.audience }}</td>
            </tr>
            <tr>
                <th>FurtherInfos</th>
                <td>{{ cy.furtherInfos }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cy.description }}</td>
            </tr>
            <tr>
                <th>WebSite</th>
                <td>{{ cy.webSite }}</td>
            </tr>
            <tr>
                <th>VideoLink</th>
                <td>{{ cy.videoLink }}</td>
            </tr>
            <tr>
                <th>InCreation</th>
                <td>{{ cy.inCreation ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>InDiffusion</th>
                <td>{{ cy.inDiffusion ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Fest</th>
                <td>{{ cy.fest ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Season</th>
                <td>{{ cy.season ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cies_index') }}">back to list</a>

    <a href="{{ path('cies_edit', {'id': cy.id}) }}">edit</a>

    {{ include('cies/_delete_form.html.twig') }}
{% endblock %}
