<form method="post" action="{{ path('press_document_delete', {'id': press_document.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ press_document.id) }}">
	<button class="btn badge badge-danger my-2 p-2">{{'general.delete'|trans({}, 'general')|capitalize}}</button>
</form>
