{% extends 'base.html.twig' %}

{% block title %}
	{{'company.index'|trans({}, 'company')|title}}
{% endblock %}

{% block flashMessage %}
	<div class="index-flash-message col-12 text-center bg-white">
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="flash-{{ label }}">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}
	</div>
{% endblock %}
{% block body %}
	<div id="adminPageTitle">
		<h1>{{'company.index'|trans({}, 'company')|title}}</h1>
	</div>
	{% set classDisplay = 'index' %}
	{% if companies|length <= 1  %}
		{% set classDisplay = 'oneElement' %}
	{% endif %}
	<table class="table table-sm table-striped {{ classDisplay }} text-center mb-5 pb-5">
		<thead>
			<tr>
				<th>{{'general.image'|trans({}, 'general')|capitalize}}</th>
				<th>{{'company.name'|trans({}, 'company')|capitalize}}</th>
				<th>{{'company.show.title'|trans({}, 'company')|capitalize}}</th>
				<th>{{'general.description'|trans({}, 'general')|capitalize}}</th>
				<th>{{'general.theme'|trans({}, 'general')|capitalize}}</th>
				<th>{{'company.show.duration'|trans({}, 'company')|capitalize}}</th>
				<th>{{'company.show.audience'|trans({}, 'company')|capitalize}}</th>
				<th>{{'company.isIn.residence?'|trans({}, 'company')|capitalize}}</th>
				<th>{{'company.inResidence'|trans({}, 'company')|capitalize}}</th>
				<th>{{'general.website'|trans({}, 'general')|capitalize}}</th>
				<th>{{'general.videoLink'|trans({}, 'general')|capitalize}}</th>
				<th>{{'general.more.infos'|trans({}, 'general')|capitalize}}</th>
				<th>
					<a href="{{ path('company_new') }}">{{'general.create'|trans({}, 'general')|capitalize}}</a>
				</th>
			</tr>
		</thead>
		<tbody>
			{% for company in companies %}
				<tr>
					<td><img class="miniImage" src="{{ asset('images/uploads/company/' ~ company.image.name) }}"></td>
					<td>{{ company.name }}</td>
					<td>{{ company.showTitle}}</td>
					<td>{{ company.description|slice(0,100)|raw }}...</td>
					<td>{{ company.theme}}</td>
					<td>{{ company.duration}}</td>
					<td>{{ company.audience}}</td>
					<td>{{ company.isInResidence ? '<i class="fas fa-check text-success"></i>' : '<i class="fas fa-times text-danger"></i>' }}
					</td>
					<td>
						{% if company.isInResidence %}
							<p>
								{{ 'general.from'|trans({}, 'general')|capitalize}}
								{{ company.inResidenceFrom ? company.inResidenceFrom|format_date('medium') : '' }}</p>
							<p>
								{{ 'general.to'|trans({}, 'general')|capitalize}}
								{{ company.inResidenceUntil ? company.inResidenceUntil|format_date('medium'): '' }}</p>
						{% endif %}
					</td>
					<td class="text-break">{{ company.website }}</td>
					<td class="text-break">{{ company.videoLink }}</td>
					<td>{{ company.moreInfos|slice(0,100)|raw }}...</td>
					<td>
						<a class="badge badge-secondary my-2 p-2" href="{{ path('company_show', {'id': company.id}) }}">{{'general.show'|trans({}, 'general')|capitalize}}</a>
						<a class="badge badge-primary my-2 p-2" href="{{ path('company_edit', {'id': company.id}) }}">{{'general.edit'|trans({}, 'general')|capitalize}}</a>
						{{ include('admin/company/_delete_form.html.twig') }}</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">{{'general.noRecords'|trans({}, 'general')|capitalize}}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
