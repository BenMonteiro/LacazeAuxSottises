{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
{% include('_back_menu.html.twig') %}

<div class="example-wrapper mt-5 pt-5">

    <h1 class=" text-left ml-3 pt-5">{{'general.hello'|trans({}, 'general')|capitalize}} {{ app.user.username }} !</h1>
    <div class=" container-fluid">
        <div class="row">
            <div class="row col-8 mt-5">
                <div class="admin-dashboard col-md-6 mb-3">
                    <div class="card text-white bg-info o-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="fas fa-music"></i>
                            </div>
                            <div class="card-text">
                                <p class="stat text-center mb-0">{{ companyNb }}</p>
                                <p class="text-center">compagnies crées dont </br>
                                    <span class="stat-bis">{{ companyInDiffusionNb }}</span> en diffusion</p>
                            </div>
                        </div>
                        <a class="card-footer text-white" href="{{ path('company_index') }}">
                            <span class="float-left">Aller à la gestion des compagnies</span>
                            <span class="float-right"><i class="fas fa-angle-right"></i></span>
                        </a>
                    </div>
                </div>
                <div class="admin-dashboard col-md-6 mb-3">
                    <div class="card text-white bg-secondary o-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <div class="card-text">
                                <p class="text-center">Prochain événement:</br>
                                    <span class="stat">{{ nextEvent.name }}</span></br>
                                    à partir du
                                    <span class="stat-bis">{{ nextEvent.starting_date|date('d-m-Y') }}</span>
                                </p>
                            </div>
                        </div>
                        <a class="card-footer text-white" href="{{ path('event_index') }}">
                            <span class="float-left">Aller à la gestion des événements </span>
                            <span class="float-right"><i class="fas fa-angle-right"></i></span>
                        </a>
                    </div>
                </div>
                <div class="admin-dashboard col-md-6 mb-3">
                    <div class="card text-white bg-success o-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="card-text">
                                <p class="stat text-center">{{ teamNb }}</p>
                                <p class="text-center">membres au sein de l'équipe</p>
                            </div>
                        </div>
                        <a class="card-footer text-white" href="{{ path('team_index') }}">
                            <span class="float-left">Aller à la gestion des membres</span>
                            <span class="float-right"><i class="fas fa-angle-right"></i></span>
                        </a>
                    </div>
                </div>
            </div>
            <aside class="col-xl-4 my-5 p-0">
                <div class="fb-page" data-href="https://www.facebook.com/LacazeauxSottisesunjoliprojet/"
                    data-tabs="timeline, events" data-width="500" data-height="" data-small-header="false"
                    data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
                    <blockquote cite="https://www.facebook.com/LacazeauxSottisesunjoliprojet/"
                        class="fb-xfbml-parse-ignore">
                        <a href="https://www.facebook.com/LacazeauxSottisesunjoliprojet/">Lacaze Aux Sottises</a>
                    </blockquote>
                </div>
            </aside>
        </div>
    </div>

    {% endblock %}