{% extends 'back_templates/no_flash_template.html.twig' %}

{% block title %}
	{{'general.hello'|trans({}, 'general')|capitalize}}
	{{ app.user.username }}
	!
{% endblock %}

{% block body %}

	<div class="example-wrapper mt-5 pt-5">

		<h1 class=" text-left ml-3 pt-5">{{'general.hello'|trans({}, 'general')|capitalize}}
			{{ app.user.username }}
			!
		</h1>
		<div class=" container-fluid">
			<div class="row">
				<div class="row col-8 mt-5">
					<div class="admin-dashboard col-md-6 mb-3">
						<div class="card text-white bg-info o-hidden h-100">
							<div class="card-body">
								<div class="card-body-icon">
									<i class="fas fa-music"></i>
								</div>
								<div class="card-text text-center ">
									<p class="stat mb-0">{{ companyNb }}</p>
									<p class="mb-0">{{ 'dashboard.companies'|trans({}, 'adminPage') }}</p>
									<p>
										<span class="stat-bis mb-0">{{ hostedCompanies }}</span>
										{{ 'company.host'|trans({}, 'company') }}</p>
								</div>
							</div>
							<a class="card-footer text-white" href="{{ path('company_index') }}" title="Aller à la liste des compagnies">
								<span class="float-left">{{ 'dashboard.handle_companies'|trans({}, 'adminPage')|capitalize }}</span>
								<span class="float-right">
									<i class="fas fa-angle-right"></i>
								</span>
							</a>
						</div>
					</div>
					<div class="admin-dashboard col-md-6 mb-3">
						<div class="card text-white bg-secondary o-hidden h-100">
							<div class="card-body">
								<div class="card-body-icon">
									<i class="fas fa-calendar-alt"></i>
								</div>
								<div class="card-text text-center">
									<p class="mb-0">{{ 'dashboard.next_event'|trans({}, 'adminPage')|capitalize }}:</p>
									<p class="mb-0">
										<span class="stat">{{ nextEvent.name|raw }}</span>
									</p>
									<p>{{ 'dashboard.from_date'|trans({}, 'adminPage') }}
										<span class="stat-bis">{{ nextEvent.starting_date|format_date('full') }}</span>
									</p>
								</div>
							</div>
							<a class="card-footer text-white" href="{{ path('event_index') }}" title="Aller à la liste des événements">
								<span class="float-left">{{ 'dashboard.handle_event'|trans({}, 'adminPage')|capitalize }}</span>
								<span class="float-right">
									<i class="fas fa-angle-right"></i>
								</span>
							</a>
						</div>
					</div>
					<div class="admin-dashboard col-md-6 mb-3">
						<div class="card text-white bg-success o-hidden h-100">
							<div class="card-body">
								<div class="card-body-icon">
									<i class="fas fa-users"></i>
								</div>
								<div class="card-text text-center">
									<p class="stat mb-0">{{ teamNb }}</p>
									<p>{{ 'dashboard.team_members'|trans({}, 'adminPage')|capitalize }}
									</p>
								</div>
							</div>
							<a class="card-footer text-white" href="{{ path('team_index') }}" title="Aller à la liste des membres de l'équipe">
								<span class="float-left">{{ 'dashboard.handle_members'|trans({}, 'adminPage')|capitalize }}</span>
								<span class="float-right">
									<i class="fas fa-angle-right"></i>
								</span>
							</a>
						</div>
					</div>
				</div>
				<aside class="col-xl-4 my-5 p-0">
					<div class="fb-page" data-href="https://www.facebook.com/LacazeauxSottisesunjoliprojet/" data-tabs="timeline, events" data-width="500" data-height="" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
						<blockquote cite="https://www.facebook.com/LacazeauxSottisesunjoliprojet/" class="fb-xfbml-parse-ignore">
							<a href="https://www.facebook.com/LacazeauxSottisesunjoliprojet/">Lacaze Aux Sottises</a>
						</blockquote>
					</div>
				</aside>
			</div>
		</div>
	</div>
{% endblock %}
