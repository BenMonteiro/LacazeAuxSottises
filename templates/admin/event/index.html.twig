{% extends 'base.html.twig' %}

{% block title %}
	{{'event.index'|trans({}, 'event')|title}}
{% endblock %}

{% block flashMessage %}
	<div class="index-flash-message col-12 text-center bg-white">
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="flash-{{ label }}">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}
	</div>
{% endblock %}
{% block body %}

	<div id="adminPageTitle">
		<h1>{{'event.index'|trans({}, 'event')|title}}</h1>
	</div>

	{% set classDisplay = 'index' %}
	{% if events|length <= 1  %}
		{% set classDisplay = 'oneElement' %}
	{% endif %}
	<table class="table table-sm {{classDisplay}} table-striped text-center mb-5 pb-5">
		<thead>
			<tr>
				<th>{{'event.name'|trans({}, 'event')|capitalize}}</th>
				<th>Descritption</th>
				<th>{{'event.start'|trans({}, 'event')|capitalize}}</th>
				<th>{{'event.end'|trans({}, 'event')|capitalize}}</th>
				<th>{{'event.hours'|trans({}, 'event')|capitalize}}</th>
				<th>{{'event.prog.image'|trans({}, 'event')|capitalize}}</th>
				<th>{{'event.prog.PDF'|trans({}, 'event')|capitalize}}</th>
				<th>
					<a href="{{ path('event_new') }}">{{'general.create'|trans({}, 'general')|capitalize}}</a>
				</th>
			</tr>
		</thead>
		<tbody>
			{% for event in events %}
				<tr>
					<td>{{ event.name }}</td>
					<td>{{ event.description|slice(0,100)|raw }}...</td>
					<td>{{ event.startingDate ? event.startingDate|date('d-m-Y') : '' }}</td>
					<td>{{ event.endingDate ? event.endingDate|date('d-m-Y') : '' }}</td>
					<td>{{ event.hours }}</td>
					<td><img class="miniImage" src="{{ asset('images/uploads/eventProgram/' ~ event.programImage.name) }}"></td>
					<td>
						<a href="{{ asset('images/uploads/eventProgram/' ~ event.programPDF.name) }}">{{event.programPDF.name}}</a>
					</td>
					<td>
						<a class="badge badge-secondary my-2 p-2" href="{{ path('event_show', {'id': event.id}) }}">{{'general.show'|trans({}, 'general')|capitalize}}</a>
						<a class="badge badge-primary my-2 p-2" href="{{ path('event_edit', {'id': event.id}) }}">{{'general.edit'|trans({}, 'general')|capitalize}}</a>
						{{ include('admin/event/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">{{'general.noRecords'|trans({}, 'general')}}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
