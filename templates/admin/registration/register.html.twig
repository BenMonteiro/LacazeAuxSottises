{% extends 'back_layout.html.twig' %}

{% block title %}
	{{'user.create'|trans({}, 'user')|title}}
{% endblock %}

{% block body %}
	<h1>{{'user.create'|trans({}, 'user')|title}}</h1>

	{{ form_start(registrationForm) }}
	<div class="offset-3 col-6">
		{{ form_row(registrationForm.username) }}
		{{ form_row(registrationForm.plainPassword) }}
		{{ form_row(registrationForm.roles) }}
	</div>
	<div class="ml-3">
		<p class="text-danger">*
			{{'general.required'|trans({}, 'general')|capitalize}}</p>
		<button class="btn badge badge-primary p-2 my-2">{{ button_label|default('Save')|trans({}, 'general') }}</button>
		<a class="badge badge-secondary p-2 mb-5" href="{{ path('user_index') }}">{{'general.back'|trans({}, 'general')|capitalize}}</a>
	</div>
	{{ form_end(registrationForm) }}
{% endblock %}
