{% extends 'base.html.twig' %}

{% block title %}{{'log.log_in'|trans({}, 'security')|title}}{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
    <div class="mb-3">
        {{'log.connected_as'|trans({}, 'security')|capitalize}} {{ app.user.username }},
        <a href="{{ path('app_logout') }}">{{'log.logout'|trans({}, 'security')|capitalize}}</a>
    </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{{'log.sign_in'|trans({}, 'security')|capitalize}}</h1>
    <label for="inputUsername">{{'Username'|trans({}, 'user')|capitalize}}</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required
        autofocus>
    <label for="inputPassword">{{'Plain password'|trans({}, 'user')|capitalize}}</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> {{'log.remember_me'|trans({}, 'security')|capitalize}}
        </label>
    </div>


    <button class="btn btn-lg btn-primary" type="submit">
        {{'log.sign_in'|trans({}, 'security')|capitalize}}
    </button>
</form>
{% endblock %}