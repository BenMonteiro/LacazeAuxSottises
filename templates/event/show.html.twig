{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Descritption</th>
                <td>{{ event.descritption }}</td>
            </tr>
            <tr>
                <th>StartingDate</th>
                <td>{{ event.startingDate ? event.startingDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndingDate</th>
                <td>{{ event.endingDate ? event.endingDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Hours</th>
                <td>{{ event.hours }}</td>
            </tr>
            <tr>
                <th>Program</th>
                <td><a href="{{ asset('images/uploads/eventProgram/' ~ event.programPDF.name) }}">Programme du festival</a></td>
            </tr>
            <tr>
                <th>Program</th>
                <td><img src="{{asset('images/uploads/eventProgram/' ~ event.programImage.name) }}"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}">back to list</a>

    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
